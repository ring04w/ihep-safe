<div class="container">

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Dashboard
        <small>It's Nice to Meet You!</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/">Home</a>
        </li>
        <li class="active">Dashboard</li>
      </ol>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-success">
        <div class="panel-heading">
          <div class="panel-title">Scan Results</div>
        </div>
        <%#<div class="panel-body">%>

          <table class="table table-bordered">
            <thead>
              <tr>
                <th class="col-md-1">IP</th>
                <th class="col-md-1">High</th>
                <th class="col-md-1">Mid</th>
                <th class="col-md-1">Low</th>
                <th class="col-md-6">Status</th>
                <th class="col-md-2">Action</th>
              </tr>
            </thead>
            <tbody>
              <% @machines.each do |machine| %>
                <tr>
                  <td> <%= machine.ip %> </td>
                  <td> <%= machine.high %> </td>
                  <td> <%= machine.mid %> </td>
                  <td class="center"> <%= machine.low %> </td>
                  <td class="center">
                    <div class="progress progress-striped active">
                      <div class="progress-bar"  role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 45%">
                        <span class="sr-only">45% Complete</span>
                      </div>
                    </div>
                  </td>
                  <td class="center">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#scanModal">Scan</button>
                    <!-- Modal -->
                    <div class="modal fade" id="scanModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                          </div>
                          <div class="modal-body">
                            <%= machine.ip %>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                          </div>
                        </div><!-- /.modal-content -->
                      </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->

                    <button type="button" class="btn btn-success">Result</button>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <%#</div>%>
      </div>
    </div>
  </div>

</div>
