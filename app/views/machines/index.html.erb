<div class="container">

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Dashboard
        <small>It's Nice to Meet You!</small>
      </h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-success">
        <div class="panel-heading">
          <div class="panel-title">Scan Results</div>
        </div>
        <%#<div class="panel-body">%>

          <table class="table table-bordered">
            <thead>
              <tr>
                <th class="col-md-1"><%= t('host') %></th>
                <th class="col-md-2"><%= t('high') %></th>
                <th class="col-md-2"><%= t('mid') %></th>
                <th class="col-md-2"><%= t('low') %></th>
                <th class="col-md-1"><%= t('status') %></th>
                <th class="col-md-4"><%= t('action') %></th>
              </tr>
            </thead>
            <tbody>
              <% @machines.each do |machine| %>
                <tr>
                  <td> <%= machine.ip %> </td>
                  <td> <%= machine.high %> </td>
                  <td> <%= machine.mid %> </td>
                  <td class="center"> <%= machine.low %> </td>
                  <td class="center">
                    <%= machine.status %>
                  </td>
                  <td class="center">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#scanModal<%= machine.id %>"><%= t('startscan') %></button>
                    <!-- scanModal -->
                    <div class="modal fade" id="scanModal<%= machine.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                          </div>
                          <div class="modal-body">
                            <%= machine.ip %>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <%= link_to("Confirm Scan",{:action =>'startscan', :id => machine.id},:class => 'btn btn-primary') %>
                          </div>
                        </div><!-- /.modal-content -->
                      </div><!-- /.modal-dialog -->
                    </div><!-- /.modal -->

                    <%= link_to(t('viewresult'),{:action =>'viewresult', :id => machine.id},:class => 'btn btn-success') %>
                    <%= link_to(t('downloadresult'),{:action =>'downloadresult', :id => machine.id},:class => 'btn btn-info') %>

                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

      </div>
      <%= will_paginate @machines %>

    </div>
  </div>

</div>
